    body
        .top
            nav.navbar.navbar-default
                .container-fluid
                    .navbar-header
                        a.navbar-brand(href="#")
                            img(alt="小小相册", src="/images/index/logo.jpg" style="width:20px;height:20px")
                        a.navbar-brand(href="#") 熊猫哥的小小相册  
                    #menu-title.collapse.navbar-collapse
                        ul.nav.navbar-nav
                            li
                                a(href="/") 全部相册 
                                    span.sr-only (current)         
                            li
                                a(href="/up") 上传
            ol.breadcrumb
                li
                    a(href="/") 全部相册
                li.active #{pictrueName}

        .content
            .row
                - for (var i = 0; i < images.length; ++i) {
                        .col-xs-6.col-md-3
                            a.thumbnail(href="#")
                                img(src="/"+pictrueName+"/"+images[i] alt="..." style="height:400px")
                            h4.img-title #{images[i]}
                - }  